{%- comment -%}
  Company Mode - Cart Page
  快樂印刷購物車頁
{%- endcomment -%}

{%- liquid
  assign primary_color = settings.color_primary | default: '#C83F49'
  assign gold_color = settings.color_secondary | default: '#B08D57'
  assign bg_color = settings.color_background | default: '#F9F9F9'
-%}

<div class="cart-page min-h-screen py-8 md:py-16" style="background-color: {{ bg_color }};">
  <div class="max-w-7xl mx-auto px-4 md:px-8">

    {%- comment -%} Page Title {%- endcomment -%}
    <header class="text-center mb-12 md:mb-16">
      <h1 class="font-lhkk text-4xl md:text-5xl lg:text-6xl font-bold mb-4" style="color: {{ primary_color }};">
        購物車
      </h1>
      <div class="w-24 h-px mx-auto" style="background-color: {{ gold_color }};"></div>
    </header>

    {%- if cart.item_count > 0 -%}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">

        {%- comment -%} ===== Cart Items ===== {%- endcomment -%}
        <div class="lg:col-span-2">
          <form action="{{ routes.cart_url }}" method="post" id="cart-form">
            <div class="space-y-4">
              {%- for item in cart.items -%}
                <div class="cart-item relative bg-white border-2 p-4 md:p-6 overflow-hidden" style="border-color: {{ primary_color }};">
                  {%- comment -%} Ticket Cutout Circles {%- endcomment -%}
                  <div class="absolute left-0 top-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 rounded-full" style="background-color: {{ bg_color }};"></div>
                  <div class="absolute right-0 top-1/2 translate-x-1/2 -translate-y-1/2 w-4 h-4 rounded-full" style="background-color: {{ bg_color }};"></div>

                  <div class="flex gap-4 md:gap-6">
                    {%- comment -%} Product Image {%- endcomment -%}
                    <a href="{{ item.url }}" class="flex-shrink-0 w-24 h-24 md:w-32 md:h-32 border overflow-hidden" style="border-color: {{ gold_color }};">
                      {%- if item.image -%}
                        <img
                          src="{{ item.image | image_url: width: 200 }}"
                          alt="{{ item.image.alt | default: item.product.title }}"
                          width="200"
                          height="200"
                          loading="lazy"
                          class="w-full h-full object-cover"
                        >
                      {%- else -%}
                        <div class="w-full h-full flex items-center justify-center" style="background-color: #f4f4f0;">
                          <span class="font-lhkk text-3xl" style="color: {{ gold_color }};">糕</span>
                        </div>
                      {%- endif -%}
                    </a>

                    {%- comment -%} Product Info {%- endcomment -%}
                    <div class="flex-grow min-w-0">
                      <a href="{{ item.url }}" class="block">
                        <h3 class="font-lhkk text-lg md:text-xl font-bold mb-1 truncate" style="color: {{ primary_color }};">
                          {{ item.product.title }}
                        </h3>
                      </a>

                      {%- if item.variant.title != 'Default Title' -%}
                        <p class="text-sm mb-2" style="color: {{ gold_color }};">
                          {{ item.variant.title }}
                        </p>
                      {%- endif -%}

                      <p class="font-lhkk text-lg font-bold mb-3" style="color: {{ primary_color }};">
                        {{ item.final_line_price | money }}
                      </p>

                      {%- comment -%} Quantity Controls {%- endcomment -%}
                      <div class="flex items-center gap-2">
                        <button
                          type="button"
                          class="w-8 h-8 border flex items-center justify-center text-lg font-bold"
                          style="border-color: {{ primary_color }}; color: {{ primary_color }};"
                          onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | minus: 1 }})"
                          aria-label="減少數量"
                        >
                          -
                        </button>
                        <input
                          type="number"
                          name="updates[]"
                          value="{{ item.quantity }}"
                          min="0"
                          class="w-14 h-8 text-center border font-lhkk"
                          style="border-color: {{ primary_color }};"
                          data-line="{{ forloop.index }}"
                          aria-label="數量"
                        >
                        <button
                          type="button"
                          class="w-8 h-8 border flex items-center justify-center text-lg font-bold"
                          style="border-color: {{ primary_color }}; color: {{ primary_color }};"
                          onclick="updateQuantity({{ forloop.index }}, {{ item.quantity | plus: 1 }})"
                          aria-label="增加數量"
                        >
                          +
                        </button>

                        <button
                          type="button"
                          class="ml-auto text-sm underline"
                          style="color: {{ gold_color }};"
                          onclick="updateQuantity({{ forloop.index }}, 0)"
                          aria-label="移除 {{ item.product.title }}"
                        >
                          移除
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </form>
        </div>

        {%- comment -%} ===== Cart Summary ===== {%- endcomment -%}
        <div class="lg:col-span-1">
          <div class="bg-white border-2 p-6 md:p-8 sticky top-8" style="border-color: {{ primary_color }};">
            <h2 class="font-lhkk text-2xl font-bold mb-6" style="color: {{ primary_color }};">
              訂單摘要
            </h2>

            {%- comment -%} Subtotal {%- endcomment -%}
            <div class="flex justify-between py-3 border-b" style="border-color: {{ gold_color }};">
              <span class="font-lhkk" style="color: {{ gold_color }};">小計</span>
              <span class="font-lhkk font-bold" style="color: {{ primary_color }};">{{ cart.total_price | money }}</span>
            </div>

            {%- comment -%} Shipping Note {%- endcomment -%}
            <div class="py-3 border-b" style="border-color: {{ gold_color }};">
              <p class="text-sm text-gray-600">
                運費將於結帳時計算
              </p>
            </div>

            {%- comment -%} Total {%- endcomment -%}
            <div class="flex justify-between py-4">
              <span class="font-lhkk text-xl" style="color: {{ gold_color }};">總計</span>
              <span class="font-lhkk text-2xl font-bold" style="color: {{ primary_color }};">{{ cart.total_price | money }}</span>
            </div>

            {%- comment -%} Checkout Button {%- endcomment -%}
            <a
              href="{{ routes.cart_url }}/checkout"
              class="block w-full py-4 text-center font-lhkk text-xl font-bold text-white transition-opacity hover:opacity-90"
              style="background-color: {{ primary_color }};"
            >
              前往結帳
            </a>

            {%- comment -%} Continue Shopping {%- endcomment -%}
            <a
              href="{{ routes.all_products_collection_url }}"
              class="block w-full py-3 mt-4 text-center font-lhkk border-2 transition-colors hover:text-white"
              style="border-color: {{ gold_color }}; color: {{ gold_color }};"
              onmouseover="this.style.backgroundColor='{{ gold_color }}'"
              onmouseout="this.style.backgroundColor='transparent'"
            >
              繼續購物
            </a>

            {%- comment -%} Cart Note {%- endcomment -%}
            <div class="mt-6">
              <label for="CartNote" class="block font-lhkk text-sm mb-2" style="color: {{ gold_color }};">
                訂單備註
              </label>
              <textarea
                id="CartNote"
                name="note"
                form="cart-form"
                class="w-full px-3 py-2 border-2 text-sm resize-none focus:outline-none"
                style="border-color: {{ gold_color }};"
                rows="3"
                placeholder="如有特別要求，請在此填寫..."
              >{{ cart.note }}</textarea>
            </div>
          </div>
        </div>
      </div>

    {%- else -%}
      {%- comment -%} Empty Cart {%- endcomment -%}
      <div class="text-center py-16">
        <span class="font-lhkk text-8xl block mb-6" style="color: {{ gold_color }};">糕</span>
        <p class="font-lhkk text-2xl mb-2" style="color: {{ primary_color }};">
          購物車是空的
        </p>
        <p class="text-gray-600 mb-8">
          快去選購我們的糕點吧！
        </p>
        <a
          href="{{ routes.all_products_collection_url }}"
          class="inline-block px-8 py-4 font-lhkk text-xl font-bold text-white transition-opacity hover:opacity-90"
          style="background-color: {{ primary_color }};"
        >
          開始選購
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  function updateQuantity(line, quantity) {
    fetch('{{ routes.cart_change_url }}', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify({
        line: line,
        quantity: quantity
      })
    })
    .then(response => response.json())
    .then(data => {
      location.reload();
    })
    .catch(error => {
      console.error('Error:', error);
    });
  }
</script>

{% schema %}
{
  "name": "購物車",
  "tag": "section",
  "class": "main-cart-section",
  "settings": []
}
{% endschema %}
