{%- comment -%}
  Company Mode - 404 Page
  快樂印刷404頁面
{%- endcomment -%}

{%- liquid
  assign primary_color = settings.color_primary | default: '#C83F49'
  assign gold_color = settings.color_secondary | default: '#B08D57'
  assign bg_color = settings.color_background | default: '#F9F9F9'
-%}

<div class="page-404 min-h-screen py-8 md:py-16" style="background-color: {{ bg_color }};">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <div class="text-center">
      {%- comment -%} 404 Number Display {%- endcomment -%}
      <div class="mb-8">
        <span class="font-lhkk text-8xl md:text-9xl font-bold" style="color: {{ primary_color }};">404</span>
      </div>

      {%- comment -%} Decorative Line {%- endcomment -%}
      <div class="w-24 h-px mx-auto mb-8" style="background-color: {{ gold_color }};"></div>

      {%- comment -%} Title {%- endcomment -%}
      <h1 class="font-lhkk text-3xl md:text-4xl lg:text-5xl font-bold mb-4" style="color: {{ primary_color }};">
        {{ 'templates.404.title' | t | default: '找不到頁面' }}
      </h1>

      {%- comment -%} Subtext {%- endcomment -%}
      <p class="text-lg text-gray-600 mb-8 max-w-md mx-auto">
        {{ 'templates.404.subtext' | t | default: '您要查找的頁面可能已被移除或暫時無法使用' }}
      </p>

      {%- comment -%} Decorative Character {%- endcomment -%}
      <div class="mb-8">
        <span class="font-lhkk text-6xl" style="color: {{ gold_color }};">糕</span>
      </div>

      {%- comment -%} Back to Home Button {%- endcomment -%}
      <a
        href="{{ routes.root_url }}"
        class="inline-block px-8 py-4 font-lhkk text-xl font-bold text-white transition-opacity hover:opacity-90"
        style="background-color: {{ primary_color }};"
      >
        {{ 'templates.404.link' | t | default: '返回首頁' }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404頁面",
  "tag": "section",
  "class": "main-404-section"
}
{% endschema %}
