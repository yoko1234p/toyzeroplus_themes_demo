{%- comment -%}
  Company Mode - Static Page
  快樂印刷靜態頁面
{%- endcomment -%}

{%- liquid
  assign primary_color = settings.color_primary | default: '#C83F49'
  assign gold_color = settings.color_secondary | default: '#B08D57'
  assign bg_color = settings.color_background | default: '#F9F9F9'
-%}

<div class="static-page min-h-screen py-8 md:py-16" style="background-color: {{ bg_color }};">
  <div class="max-w-7xl mx-auto px-4 md:px-8">

    {%- comment -%} Page Header {%- endcomment -%}
    <header class="text-center mb-12 md:mb-16">
      <h1 class="font-lhkk text-4xl md:text-5xl lg:text-6xl font-bold mb-4" style="color: {{ primary_color }};">
        {{ page.title }}
      </h1>
      <div class="w-24 h-px mx-auto" style="background-color: {{ gold_color }};"></div>
    </header>

    {%- comment -%} Page Content {%- endcomment -%}
    <div class="page-content bg-white border-2 p-6 md:p-8 lg:p-12" style="border-color: {{ primary_color }};">
      <div class="prose prose-lg max-w-none
        prose-headings:font-lhkk prose-headings:font-bold
        prose-h2:text-2xl prose-h2:md:text-3xl
        prose-h3:text-xl prose-h3:md:text-2xl
        prose-p:text-gray-700 prose-p:leading-relaxed
        prose-a:transition-opacity hover:prose-a:opacity-70
        prose-ul:list-disc prose-ol:list-decimal
        prose-li:text-gray-700"
        style="--tw-prose-headings: {{ primary_color }}; --tw-prose-links: {{ gold_color }};"
      >
        {{ page.content }}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "頁面",
  "tag": "section",
  "class": "main-page-section"
}
{% endschema %}
